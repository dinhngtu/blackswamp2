{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tudinh.xyz/article.schema.yaml",
  "title": "Article",
  "description": "tudinh.xyz article",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://tudinh.xyz/article.schema.yaml"
    },
    "id": {
      "type": "string"
    },
    "Title": {
      "type": "string"
    },
    "Author": {
      "type": "string"
    },
    "Description": {
      "type": "string"
    },
    "Modules": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/module"
      }
    },
    "Privacy": {
      "$ref": "#/definitions/articlePrivacy"
    },
    "Sections": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/markdownSection"
          },
          {
            "$ref": "#/definitions/youtubeSection"
          }
        ]
      }
    }
  },
  "required": [
    "id",
    "Sections"
  ],
  "additionalProperties": false,
  "definitions": {
    "section": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "Privacy": {
          "$ref": "#/definitions/sectionPrivacy"
        }
      }
    },
    "markdownSection": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/section"
        }
      ],
      "properties": {
        "Markdown": {
          "type": "string"
        },
        "Name": {},
        "Privacy": {}
      },
      "required": [
        "Markdown"
      ],
      "additionalProperties": false
    },
    "youtubeSection": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/section"
        }
      ],
      "properties": {
        "YoutubeId": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9-_]{11}"
        },
        "Title": {
          "type": "string"
        },
        "Name": {},
        "Privacy": {}
      },
      "required": [
        "YoutubeId"
      ],
      "additionalProperties": false
    },
    "articlePrivacy": {
      "type": "string",
      "enum": [
        "Public",
        "Mixed",
        "Private",
        "Hidden"
      ]
    },
    "sectionPrivacy": {
      "type": "string",
      "enum": [
        "Public",
        "Private"
      ]
    },
    "module": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "Dynamic"
          ]
        },
        {
          "type": "string"
        }
      ]
    }
  }
}
