{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "lib": [
      "DOM"
    ],
    "module": "ES6",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "purifier": [
        "renderer/purifier.ts"
      ]
    }
  },
  "include": [
    "renderer/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
