{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "CommonJS",
    "jsx": "react",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "purifier": [
        "node/purifier.ts"
      ]
    }
  },
  "include": [
    "renderer/**/*",
    "node/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
