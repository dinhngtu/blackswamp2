{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "CommonJS",
    "jsx": "react",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "renderer/**/*",
    "static/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
